<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#444444"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/leaf_icon" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_border"
        android:elevation="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">


        <EditText
            android:id="@+id/etID"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_border_edittext"
            android:drawableStart="@drawable/login_image_size"
            android:elevation="10dp"
            android:gravity="center"
            android:hint="ID를 입력하세요"
            android:lines="1"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textSize="17sp" />


        <EditText
            android:id="@+id/etPW"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_border_edittext"
            android:drawableStart="@drawable/login_password_image_size"
            android:elevation="10dp"
            android:gravity="center"
            android:hint="PW를 입력하세요"
            android:inputType="textPassword"
            android:lines="1"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:textSize="17sp" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btnLogin"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/login_round_button"
            android:onClick="clickLogin"
            android:text="LOGIN"
            android:textColor="#FFF"
            android:textSize="17sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>